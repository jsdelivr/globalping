{
	"extends": "@tsconfig/strictest/tsconfig",
	"compilerOptions": {
		"outDir": "./dist",
		"lib": [
			"ES2023"
		],
		"module": "ESNext",
		"target": "ES2022",
		"moduleResolution": "Node",
		"resolveJsonModule": true,
		"sourceMap": true,
		"paths": {
			"chai": [
				"./test/plugins/oas"
			]
		}
	},
	"include": [
		"src/**/*",
		"test/**/*.ts"
	],
	"exclude": [
		"dist",
		"public",
		"node_modules"
	]
}
