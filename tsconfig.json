{
	"extends": "@tsconfig/strictest/tsconfig",
	"compilerOptions": {
		"outDir": "./dist",
		"lib": [
			"ES2024",
			"ESNext.Array",
			"ESNext.Collection",
			"ESNext.Iterator",
			"ESNext.Promise"
		],
		"module": "NodeNext",
		"target": "ES2024",
		"moduleResolution": "NodeNext",
		"resolveJsonModule": true,
		"sourceMap": true
	},
	"include": [
		"src/**/*",
		"test/**/*.ts"
	],
	"exclude": [
		"dist",
		"public",
		"node_modules"
	]
}
